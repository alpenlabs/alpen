{
  "title": "Test Flakiness Tracker",
  "uid": "test-flakiness",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "panels": [
    {
      "title": "Test Summary",
      "type": "stat",
      "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${datasource}"},
          "expr": "sum(sum_over_time(test_result_count[$__range]))",
          "refId": "A",
          "legendFormat": "Total Test Runs"
        },
        {
          "datasource": {"type": "prometheus", "uid": "${datasource}"},
          "expr": "sum(sum_over_time(test_result_failures{status=\"failed\"}[$__range]))",
          "refId": "B",
          "legendFormat": "Failed Tests"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Total Test Runs"},
            "properties": [
              {
                "id": "color",
                "value": {"mode": "fixed", "fixedColor": "blue"}
              }
            ]
          }
        ]
      }
    },
    {
      "title": "Top Failed Tests",
      "type": "table",
      "gridPos": {"h": 16, "w": 24, "x": 0, "y": 4},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${datasource}"},
          "expr": "sum by (test) (sum_over_time(test_result_failures{status=\"failed\"}[$__range])) > 0",
          "refId": "A",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true},
            "renameByName": {
              "test": "Test Name",
              "Value": "Failure Count"
            }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [{"field": "Failure Count", "desc": true}]
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Failure Count"},
            "properties": [
              {
                "id": "custom.width",
                "value": 150
              },
              {
                "id": "color",
                "value": {"mode": "thresholds"}
              }
            ]
          }
        ]
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "selected": false,
          "text": "Prometheus",
          "value": "prometheus"
        }
      }
    ]
  }
}
